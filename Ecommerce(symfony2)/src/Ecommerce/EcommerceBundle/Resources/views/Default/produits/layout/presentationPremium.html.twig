{% extends "::layout/layoutfront.html.twig" %}

{% block body %}
<!-- main-container -->
  {% set idProduitPremium = produitPemium.id  %}
  <section class="main-container col1-layout">
    <div class="main container">
      <div class="col-main">
        <div class="row">
          <div class="product-view">
            <div class="product-essential">
              <form action="#" method="post" id="product_addtocart_form">
                <input name="form_key" value="6UbXroakyQlbfQzK" type="hidden">
                <div class="product-img-box col-sm-5 wow bounceInRight animated">
                  <div class="new-label new-top-left"> Nouveau </div>
                   <div class="product-image">
                    <div class="large-image"> <a href="{{ asset(produitPemium.image.AssetPath) }}" class="cloud-zoom" id="zoom1" rel="useWrapper: false, adjustY:0, adjustX:20"> <img src="{{ asset(produitPemium.image.AssetPath) }}" title="{{produitPemium.nom}}"> </a> </div>
                    <div class="flexslider flexslider-thumb">
                      <ul class="previews-list slides">
                       {% if produit.image1.path != NULL %}
                        <li><a href='{{ asset(produit.image.AssetPath) }}' class='cloud-zoom-gallery' rel="useZoom: 'zoom1', smallImage: '{{ asset(produit.image.AssetPath) }}' "><img src="{{ asset(produit.image.AssetPath) }}" alt = "Thumbnail 1"/></a></li>
                        {% endif %}
                      {% if produit.image1.path != NULL %}
                        <li><a href='{{ asset(produitPemium.image1.AssetPath) }}' class='cloud-zoom-gallery' rel="useZoom: 'zoom1', smallImage: '{{ asset(produitPemium.image1.AssetPath) }}' "><img src="{{ asset(produitPemium.image1.AssetPath) }}" alt = "Thumbnail 1"/></a></li>
                        {% endif %}
                          {% if produit.image2.path != NULL %}
                        <li><a href='{{ asset(produitPemium.image1.AssetPath) }}' class='cloud-zoom-gallery' rel="useZoom: 'zoom1', smallImage: '{{ asset(produitPemium.image2.AssetPath) }}' "><img src="{{ asset(produitPemium.image2.AssetPath) }}" alt = "Thumbnail 1"/></a></li>
                        {% endif %}
                        {% if produit.image3.path != NULL %}
                        <li><a href='{{ asset(produitPemium.image3.AssetPath) }}' class='cloud-zoom-gallery' rel="useZoom: 'zoom1', smallImage: '{{ asset(produitPemium.image3.AssetPath) }}' "><img src="{{ asset(produitPemium.image3.AssetPath) }}" alt = "Thumbnail 3"/></a></li>   
                        {% endif %}   
                      </ul>
                    </div>
                  </div>
                  
                  <!-- end: more-images -->
                  
                  <div class="clear"></div>
                </div>
                <div class="product-shop col-sm-7 wow bounceInLeft animated">
                  <div class="product-name">
                    <h2>{{ produitPemium.marque }}</h2>
                  </div>
                  {% if produitPemium.disponible!=0 %}
                  <p class="availability in-stock">Disponibilité: <span>En stock</span></p>
                  {% else %}
                  <p class="availability in-stock">Disponibilité: <span> Non </span></p>
                  {% endif %}
                  <div class="price-block">
                    <div class="price-box">
                      <p class="special-price"> <span class="price">{{ produitPemium.prixremise }} dt</span> </p>
                      <p class="old-price"> <span class="price-sep">-</span> <span class="price">{{ produitPemium.prix }}dt </span> </p>
                    </div>
                  </div>
                    <div class="short-description">
                    <h2>Catégorie:</h2>
                    <p>{{ produitPemium.categorieProduit.nom }}</p>
                     <h2>Boutique:</h2>
                    <p><a title=" Sample Product" href="{{ path('presentationBoutique', { 'idB' : produitPemium.boutique.id }) }}">{{ produitPemium.boutique.nom }}</a></p>
                    </div>
                  
                  <div class="add-to-box">
                  {% if produitPemium.disponible!=0 %}
                    {% if panier[produitPemium.id] is not defined %}
                    <div class="add-to-cart">
                      <a  href="{{ path('ajouter', { 'id' : produitPemium.id }) }}"><button onClick="productAddToCartForm.submit(this)" class="button btn-cart" title="Ajouter au panier" type="button"><span><i class="icon-basket"></i>Ajouter au panier</span></button></a>
                    </div>
                    {% else %}
                    <div class="add-to-cart">
                      <a  href="{{ path('ajouter', { 'id' : produitPemium.id }) }}"><button onClick="productAddToCartForm.submit(this)" class="button btn-cart" title="Ajouter au panier" type="button"><span><i class="icon-basket"></i>Deja au panier</span></button></a>
                    </div>
                    {% endif %}
