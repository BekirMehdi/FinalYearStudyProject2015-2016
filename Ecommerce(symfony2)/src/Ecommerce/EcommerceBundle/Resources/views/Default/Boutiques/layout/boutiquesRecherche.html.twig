{% extends "::layout/layoutfront.html.twig" %}

{% block body %}


            
    
                <section class="main-container col1-layout home-content-container">
                    <div class="container">
                        <div class="std">
                            <div class="best-seller-pro wow bounceInUp animated">
                              {% if boutiques|length != 0 %}
                                <div class="slider-items-products">
                                    <div class="new_title center">
                                   
                                    </div>
                                    <div id="best-seller-slider" class="product-flexslider hidden-buttons">
                                    <div class="slider-items slider-width-col4"> 
                                        {% for boutique in boutiques %}
                                            <div class="item">
                                              <div class="col-item">
                                                
                                                <div class="product-image-area"> <a class="product-image" title="{{ boutique.nom }}" href="{{ path('presentationBoutique', { 'idB' : boutique.id }) }}"> <img src="{{ asset(boutique.image.AssetPath) }}" class="img-responsive" title="{{ boutique.nom }}" /> </a>
                                                  
                                                </div>
                                                <div class="info">
                                                  <div class="info-inner">
                                                    <div class="item-title">
                                                     {% if panier[boutique.id] is not defined %}
                                                     <a title=" Sample Product" href="{{ path('presentationBoutique', { 'idB' : boutique.id }) }}"> {{ boutique.nom }} </a> 
                                                      {% endif %}
                                                    
                                            
                                                    
                                                     </div>
                                                    <!--item-title-->
                                                   
                                                    <!--item-content--> 
                                                  </div>
                                                  <!--info-inner-->
                                                  
                                                  <div class="clearfix"> </div>
                                                </div>
                                              </div>
                                            </div>
                                        {% endfor %}                
                                         <div class="navigation">
                                          
                                        </div>  

                                    </div>  
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% else %}
                Aucun boutique
            {% endif %} 
                </section>



            
 
{% endblock %}