{% extends "::layout/layoutfront.html.twig" %}

{% block body %}

<!-- breadcrumbs -->
  
  <div class="breadcrumbs">
    <div class="container">
      <div class="row">
        <ul>
          <li class="home"> <a title="Aller à la page d'accueil" href="{{ path('produits') }}">Accueil</a><span>&mdash;›</span></li>
          <li class="category13"><strong>Contactez nous</strong></li>
        </ul>
      </div>
    </div>
  </div>
  <!-- main-container -->
  <div class="main-container col2-right-layout major">
    <div class="main container">
      <div class="row">
        <section class="col-main col-sm-9 wow bounceInUp animated">
          <div class="page-title">
            <h2>Contactez nous</h2>
          </div>
          <div class="static-contain">
            <fieldset class="group-select">
              <form class="comment-form" action="{{ path('contactUs') }}" method="POST" id="postComment">
                <ul>
                  <li id="billing-new-address-form">
                    <fieldset>
                      <legend>Nouvelle adresse</legend>
                      <input type="hidden" name="billing[address_id]" value="" id="billing:address_id">
                      <ul>
                        <li>
                          <div class="customer-name">
                            <div class="input-box name-firstname">
                              <label for="billing:firstname"> Prénom<span class="required">*</span></label>
                              <br>
                              <input type="text" id="billing:firstname" name="firstName" required="required" value="" title="Prénom" class="input-text ">
                            </div>
                            <div class="input-box name-lastname">
                              <label for="billing:lastname"> Adresse e-mail <span class="required">*</span> </label>
                              <br>
                              <input type="email" id="billing:lastname" name="email" required="required" value="" title="Last Name" class="input-text">
                            </div>
                          </div>
                        </li>
                        <li>
                          <div class="input-box">
                            <label for="billing:company">Compagnie</label>
                            <br>
                            <input type="text" id="billing:company" name="compagnie" required="required" value="" title="Compagnie" class="input-text">
                          </div>
                          <div class="input-box">
                            <label for="billing:email">Téléphone <span class="required">*</span></label>
                            <br>
                            <input type="number" name="telephone" required="required" id="billing:email" value="" title="Téléphone" class="input-text validate-email">
                          </div>
                        </li>
                        <li>
                          <label for="billing:street1">Adresse <span class="required">*</span></label>
                          <br>
                          <input type="text" title="Adresse" name="adresse" required="required" id="billing:street1" value="" class="input-text required-entry">
                        </li>
                        <li class="">
                          <label for="comment">Commentaire<em class="required">*</em></label>
                          <br>
                          <div class="">
                            <textarea name="commentaire" required="required" id="comment" title="Commentaire" class="required-entry input-text" cols="5" rows="3"></textarea>
                          </div>
                        </li>
                      </ul>
                    </fieldset>
                  </li>
                  <li>
              
                  <input type="text" name="hideit" id="hideit" value="">
                  <div class="buttons-set">
                    <button type="submit" title="Submit" class="button submit"> <span> Envoyer </span> </button>
                  </div>
                  </li>
                </ul>
              </form>  
            </fieldset>
          </div>
        </section>
        <aside class="col-right sidebar col-sm-3 wow bounceInUp animated">
          <div class="block block-company">
            <img alt="offer banner1" src="{{ asset('frontoffice/images/nouscontacter.jpg')}}">
          </div>
        </aside>
      </div>
    </div>
  </div>
  <!--End main-container --> 
 
{% endblock %}