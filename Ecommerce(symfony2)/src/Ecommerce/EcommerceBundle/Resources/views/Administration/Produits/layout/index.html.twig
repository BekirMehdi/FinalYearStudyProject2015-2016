{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
    <div class="new_title center">
        <h2> Liste des Produits </h2>
    </div>
    
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <!--<th>Id</th>--!>
                <th>Nom</th>
                <th>Marque</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Prix remise</th>
                <th>Disponible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="image"><a class="product-image" title="{{ entity.nom }}" href="{{ path('presentation', { 'id' : entity.id }) }}"><img width="75" alt="{{ entity.nom }}" src="{{ asset(entity.image.AssetPath) }}"></a></td>
                <!--<td>{{ entity.id }}</td>--!>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.marque }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.prix }}</td>
                 <td>{{ entity.prixremise }}</td>
                <td>{{ entity.disponible }}</td>
                <td>
                    <a href="{{ path('adminProduits_show', { 'id': entity.id }) }}"><i class="icon-book"></i></a>
                    <a href="{{ path('adminProduits_edit', { 'id': entity.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="bouton_button_add">
        <a href="{{ path('adminProduits_new') }}">
                Cr√©er un nouveau produit
        </a>
    </div>
    {% endblock %}
