{% extends '::layout/layoutSuperAdmin.html.twig' %}

{% block body -%}
<div class="new_title center">
    <h1>Boutiques Premium</h1>
</div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <!--<th>Id</th>--!>
