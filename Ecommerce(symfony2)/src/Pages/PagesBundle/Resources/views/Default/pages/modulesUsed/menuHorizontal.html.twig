                  <p>{{ article.titre }}</p>
                  <a href="{{ path('article', { 'id' : article.id }) }}"><button type="button" title="Lire plus" class="learn_more_btn"><span>Lire plus</span></button></a>
                </div>
              {% endfor %}
              </div>
            </div>
          {% endif %}  