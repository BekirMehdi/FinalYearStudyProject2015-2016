          {% if articles != 0 %}
            <div class="level0-wrapper custom-menu">
              <div class="header-nav-dropdown-wrapper clearer">
              {% for article in articles|slice(0, 4) %}
                <div class="grid12-5">
                 
                  <div class="custom_img"><a href="{{ path('article', { 'id' : article.id }) }}"><img src="{{ asset(article.image.AssetPath) }}" alt="custom img1"></a></div>
